.container
  .row
    %p.flow-text.animate_text_notify
      You have a greate profile with Explore.me, Modify Account Informations.
  .form_panel.card-panel 
    %h2
      Edit Account
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .row
        .input-field.col.s6
          %i.material-icons.prefix language
          = f.text_field :subdomain, class: "validate", autofocus: true, required: true
          %label{:for => "user_subdomain"} Choose subdomain (without space)
        .col.s6
          %b Example: 
          Choose subdomain as "maria"
          %br
          You will get a profile page 
          %b http://maria.site.com
      .row
        .input-field.col.s6
          %i.material-icons.prefix account_circle
          = f.text_field :first_name, class: "validate", autofocus: true, required: true
          %label{:for => "icon_prefix"} First Name
        .input-field.col.s6
          %i.material-icons.prefix perm_identity
          = f.text_field :last_name, class: "validate", required: true
          %label{:for => "user_last_name"} Last Name
      .row
        .input-field.col.s12
          %i.material-icons.prefix email
          = f.email_field :email, class: "validate", required: true
          %label{:for => "user_email"} Email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .row
        .input-field.col.s6
          %i.material-icons.prefix vpn_key
          = f.password_field :password, autocomplete: "off"
          %label{:for => "user_password"} 
            Password (8 characters minimum)
        .input-field.col.s6
          %i.material-icons.prefix vpn_key
          = f.password_field :password_confirmation, autocomplete: "off"
          %label{:for => "user_password_confirmation"} Password confirmation 
      .row
        .input-field.col.s12
          %i.material-icons.prefix vpn_key
          = f.password_field :current_password, autocomplete: "off", required: true
          %label{:for => "user_current_password"} current password
      .row
        .input-field.col.s9
          = f.submit "Update", class: "btn"
    %h3 Cancel my account
    %p
      Unhappy? #{button_to "Cancel my account", registration_path(resource_name), class: "btn red",data: { confirm: "Are you sure?" }, method: :delete}
  = link_to "Back", :back
